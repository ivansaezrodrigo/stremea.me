    title: "Compartir",
    html: "<div class='flex flex-col items-center'><img class='h-fit w-20' src='/img/mascota.png'><br>Este es el enlace de tu streaming:<br><b>" + window.location.href + "</b></div>",
    showCancelButton: true,
    cancelButtonText: "Cerrar",
    confirmButtonText: "Copiar",
  }).then(async (result) => {
    if (result.isConfirmed) {
      // se copia el enlace al portapapeles
      navigator.clipboard.writeText(window.location.href);
    }
  });
});

